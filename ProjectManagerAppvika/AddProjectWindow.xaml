<Window x:Class="ProjectManagerApp.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать проект" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="ID проекта:"/>
            <!-- Запрещаем редактирование ID -->
            <TextBox Name="ProjectIdTextBox" Margin="5" IsReadOnly="True"/>

            <TextBlock Text="Название проекта:"/>
            <TextBox Name="ProjectNameTextBox" Margin="5"/>

            <TextBlock Text="Описание:"/>
            <TextBox Name="DescriptionTextBox" Margin="5"/>

            <TextBlock Text="Заголовок:"/>
            <TextBox Name="TitleTextBox" Margin="5"/>

            <TextBlock Text="Автор:"/>
            <TextBox Name="AuthorTextBox" Margin="5"/>

            <TextBlock Text="Git-ссылка:"/>
            <TextBox Name="GitLinkTextBox" Margin="5"/>

            <TextBlock Text="Комментарий:"/>
            <TextBox Name="CommentTextBox" Margin="5"/>

            <TextBlock Text="Путь к установщику:"/>
            <TextBox Name="InstallerPathTextBox" Margin="5"/>

            <TextBlock Text="URL:"/>
            <TextBox Name="UrlTextBox" Margin="5"/>

            <TextBlock Text="Домен:"/>
            <TextBox Name="DomainTextBox" Margin="5"/>

            <TextBlock Text="База данных:"/>
            <TextBox Name="DatabaseTextBox" Margin="5"/>

            <TextBlock Text="Порт:"/>
            <TextBox Name="PortTextBox" Margin="5"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox Name="PasswordTextBox" Margin="5"/>

            <Button Content="Сохранить" Name="SaveButton" VerticalAlignment="Bottom" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
