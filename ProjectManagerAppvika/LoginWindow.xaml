<Window x:Class="ProjectManagerApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Введите суперпароль:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0" FontSize="16" FontWeight="Bold"/>
        
        <PasswordBox Name="PasswordBox" VerticalAlignment="Top" HorizontalAlignment="Center" Width="250" Margin="0,80,0,0"/>
        
        <Button Name="ShowPasswordButton" Content="Показать" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Margin="0,80,50,0" Click="ShowPasswordButton_Click"/>
        
        <Button Content="Войти" Name="LoginButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="120" Height="35" Margin="0,0,0,40" Click="LoginButton_Click"/>
    </Grid>
</Window>